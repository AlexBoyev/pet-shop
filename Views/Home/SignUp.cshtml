
@model WebApplication2.Models.User

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("Space")
<h3>Add New Customer</h3>

@TempData["emailExists"]
@TempData["PhoneExists"]
@TempData["LoginExists"]
<br/>

@using (Html.BeginForm("Submit", "Home", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @placeholder = "Enter your name", @class = "form-control" }) @*good looking form  *@
        @Html.ValidationMessageFor(m => m.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Address)
        @Html.TextBoxFor(m => m.Address, new { @placeholder = "Enter your address", @class = "form-control" }) @*good looking form  *@
        @Html.ValidationMessageFor(m => m.Address)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Phone)
        @Html.TextBoxFor(m => m.Phone, new { @placeholder = "Enter phone number", @class = "form-control" }) @*good looking form  *@
        @TempData["InvalidValue"]
        @Html.ValidationMessageFor(m => m.Phone)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @placeholder = "Enter your email address", @class = "form-control" }) @*good looking form  *@
        @Html.ValidationMessageFor(m => m.Email)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Login)
        @Html.TextBoxFor(m => m.Login, new { @placeholder = "Enter your login", @class = "form-control" }) @*good looking form  *@
        @Html.ValidationMessageFor(m => m.Login)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { @placeholder = "Enter a password", @class = "form-control" }) @*good looking form  *@
        @Html.ValidationMessageFor(m => m.Password)


    </div>
    @Html.AntiForgeryToken(); //to prevent attacks by hackers
    <button type="submit" class="btn btn-primary">Save</button>



}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}